{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  }
}
